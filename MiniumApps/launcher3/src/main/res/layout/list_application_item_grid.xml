<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/relMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="Grid">

    <LinearLayout
        android:id="@+id/linearList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="@dimen/dp_8"
        android:tag="1"
        tools:ignore="UseCompoundDrawables,UselessParent">

        <co.siempo.phone.customviews.RobotoCondensedTextView
            android:id="@+id/txtAppTextImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="?attr/icon_color"
            android:textSize="30sp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/imgAppIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal|bottom"
            android:contentDescription="@null"/>


        <View
            android:id="@+id/imgUnderLine"
            android:layout_width="24dp"
            android:layout_height="3dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:background="?attr/icon_color"
            android:visibility="visible"/>

        <LinearLayout
            android:id="@+id/favorite_txtLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="InefficientWeight">

            <co.siempo.phone.customviews.RobotoCondensedTextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:maxLines="1"
                android:paddingTop="4dp"
                android:textColor="?attr/icon_color"
                android:textSize="13sp"
                tools:text="Text"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
